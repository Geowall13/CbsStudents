@model CbsStudents.Models.Entities.Participant

@{
    ViewData["Title"] = "Create";
}

<h4>Add participant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <div class="form-group">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Participant" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a
        class="btn btn-secondary"
        asp-controller="Event"
        asp-action="Details"
        asp-route-id="@Model.EventId"
    >Back to Event</a>
</div>

<hr>

<h3>Participants</h3>

@foreach (var participant in Model.Event.Participants)
{
    <div class="row">
        <div class = "col-sm-10">
            @Html.DisplayFor(x => participant.Name)
        </div>
        <div>
            <a
                class="btn btn-danger"
                asp-action="Delete"
                asp-route-id="@participant.ParticipantId"
            >Remove participant</a>
        </div>
    </div>
}