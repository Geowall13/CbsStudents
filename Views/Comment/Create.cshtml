@model CbsStudents.Models.Entities.Comment
@{
    ViewData["Title"] = "Create";
}

<h4>Create comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            @await Html.PartialAsync("_CreateEditPartial")
        </form>
    </div>
</div>

<div>
    <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId">Back to Post</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
