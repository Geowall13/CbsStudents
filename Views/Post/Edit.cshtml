@model CbsStudents.Models.Entities.Post
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit post</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="Created" />
            @await Html.PartialAsync("_CreateEditPartial")
        </form>
    </div>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.PostId">Back to Post</a>
</div>

@await Html.PartialAsync("_PostCommentsPartial")


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}